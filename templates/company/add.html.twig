{% extends 'base.html.twig' %}

{% block title %}Додавання компанії{% endblock %}

{% block nav %} {% endblock %}

{% block breadcrumb %}
    <li>
        <a href="{{ path('app_companies') }}" class="text-gray-600 hover:text-gray-900">Компанії</a>
    </li>

    <li>
        {{ include("_chevron.html.twig") }}
    </li>

    <li aria-current="page" class="text-gray-900 font-medium">Додавання</li>
{% endblock %}

{% block body %}
    <div class="px-2">
        <h2 class="text-gray-600 text-xl font-bold">Додавання компанії</h2>

        {{ form_start(form, { "attr": {"novalidate": "novalidate"}}) }}
        <div class="mt-10 grid grid-cols-1 gap-y-4">
            <div>
                {{ form_label(form.name, "Назва компанії", {"label_attr": {"class": "block text-sm/6 font-medium text-gray-900"}}) }}
                <div class="mt-2 flex items-center rounded-md bg-white pl-3 outline-1 -outline-offset-1 outline-gray-300 focus-within:outline-2 focus-within:-outline-offset-2 focus-within:outline-sky-600">
                    {{ form_widget(form.name, {"attr": {"class": "block min-w-0 grow bg-white py-1.5 pr-3 pl-1 text-base text-gray-900 placeholder:text-gray-400 focus:outline-none sm:text-sm/6"}}) }}
                </div>
                {{ form_errors(form.name) }}
            </div>
            <div>
                {{ form_label(form.website, "Веб-сайт компанії", {"label_attr": {"class": "block text-sm/6 font-medium text-gray-900"}}) }}
                <div class="mt-2 flex items-center rounded-md bg-white pl-3 outline-1 -outline-offset-1 outline-gray-300 focus-within:outline-2 focus-within:-outline-offset-2 focus-within:outline-sky-600">
                    {{ form_widget(form.website, {"attr": {"class": "block min-w-0 grow bg-white py-1.5 pr-3 pl-1 text-base text-gray-900 placeholder:text-gray-400 focus:outline-none sm:text-sm/6"}}) }}
                </div>
                {{ form_errors(form.website) }}
            </div>
            <div>
                {{ form_label(form.address, "Адреса компанії", {"label_attr": {"class": "block text-sm/6 font-medium text-gray-900"}}) }}
                <div class="mt-2 flex items-center rounded-md bg-white pl-3 outline-1 -outline-offset-1 outline-gray-300 focus-within:outline-2 focus-within:-outline-offset-2 focus-within:outline-sky-600">
                    {{ form_widget(form.address, {"attr": {"class": "block min-w-0 grow bg-white py-1.5 pr-3 pl-1 text-base text-gray-900 placeholder:text-gray-400 focus:outline-none sm:text-sm/6"}}) }}
                </div>
                {{ form_errors(form.address) }}
            </div>
            <div>
                {{ form_label(form.phone, "Номер телефону компанії", {"label_attr": {"class": "block text-sm/6 font-medium text-gray-900"}}) }}
                <div class="mt-2 flex items-center rounded-md bg-white pl-3 outline-1 -outline-offset-1 outline-gray-300 focus-within:outline-2 focus-within:-outline-offset-2 focus-within:outline-sky-600">
                    {{ form_widget(form.phone, {"attr": {"class": "block min-w-0 grow bg-white py-1.5 pr-3 pl-1 text-base text-gray-900 placeholder:text-gray-400 focus:outline-none sm:text-sm/6"}}) }}
                </div>
                {{ form_errors(form.phone) }}
            </div>
        </div>
        <div class="mt-6">
            <button type="submit" class="block py-2 px-4 text-md bg-purple-500 text-white shadow-md rounded md">Додати</button>
        </div>
        {{ form_end(form) }}
    </div>


{% endblock %}
