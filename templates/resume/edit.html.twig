{% extends 'base.html.twig' %}

{% block title %}Редагування резюме "{{ form.position_title.vars.value }}"{% endblock %}

{% block nav %} {% endblock %}

{% block breadcrumb %}
    <li>
        <a href="{{ path('app_resumes') }}" class="text-gray-600 hover:text-gray-900">Резюме</a>
    </li>

    <li>
        {{ include("_chevron.html.twig") }}
    </li>

    <li>
        <span class="text-gray-600 hover:text-gray-900">{{ form.position_title.vars.value }}</span>
    </li>

    <li>
        {{ include("_chevron.html.twig") }}
    </li>

    <li aria-current="page" class="text-gray-900 font-medium">Редагування</li>
{% endblock %}

{% block body %}
    <script src="https://cdn.tiny.cloud/1/4h1l0pc75a1emenbzx8h3ybr330y1uuhkg46vzpwbc8chh8d/tinymce/8/tinymce.min.js" referrerpolicy="origin" crossorigin="anonymous"></script>
    <script>
        tinymce.init({
            selector: 'textarea#resume_content',
            plugins: 'lists link paste',
            toolbar: 'undo redo | bold italic underline | bullist numlist | link',
            width: '100%',
            menubar: false
        });
    </script>
    <div class="px-2">
        <h2 class="text-gray-600 text-xl font-bold">Редагування резюме</h2>
        {{ include("resume/_form.html.twig", {
            form: form,
            submitButtonText: "Зберегти"
        }) }}
    </div>
{% endblock %}
