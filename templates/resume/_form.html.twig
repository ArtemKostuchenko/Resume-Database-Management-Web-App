{{ form_start(form, { "attr": {"novalidate": "novalidate"}}) }}
<div class="mt-10 grid grid-cols-1 gap-y-4">
    <div>
        {{ form_label(form.position_title, "Назва посади", {"label_attr": {"class": "block text-sm/6 font-medium text-gray-900"}}) }}
        <div class="mt-2 flex items-center rounded-md bg-white pl-3 outline-1 -outline-offset-1 outline-gray-300 focus-within:outline-2 focus-within:-outline-offset-2 focus-within:outline-sky-600">
            {{ form_widget(form.position_title, {"attr": {"class": "block min-w-0 grow bg-white py-1.5 pr-3 pl-1 text-base text-gray-900 placeholder:text-gray-400 focus:outline-none sm:text-sm/6"}}) }}
        </div>
        {{ form_errors(form.position_title) }}
    </div>
    <div>
        {{ form_label(form.content, "Текст резюме", {"label_attr": {"class": "block text-sm/6 font-medium text-gray-900"}}) }}
        <div class="mt-2 flex items-center w-full">
            {{ form_widget(form.content, {"attr": {"class": "block w-full"}}) }}
        </div>
        {{ form_errors(form.content) }}
    </div>
    <div>
        {{ form_label(form.resumeFile, "Файл резюме", {"label_attr": {"class": "block text-sm/6 font-medium text-gray-900"}}) }}
        <div class="mt-2 flex items-center rounded-md bg-white pl-3 outline-1 -outline-offset-1 outline-gray-300 focus-within:outline-2 focus-within:-outline-offset-2 focus-within:outline-sky-600">
            {{ form_widget(form.resumeFile, {"attr": {"class": "block min-w-0 grow bg-white py-1.5 pr-3 pl-1 text-base text-gray-900 placeholder:text-gray-400 focus:outline-none sm:text-sm/6"}}) }}
        </div>
        {{ form_errors(form.resumeFile) }}
    </div>
</div>
<div class="mt-6">
    <button type="submit" class="block py-2 px-4 text-md bg-purple-500 text-white shadow-md rounded md">
        {{ submitButtonText }}
    </button>
</div>
{{ form_end(form) }}